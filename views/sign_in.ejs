<html>
    <head>
        <title>MessageX | Sign In</title>
        <link rel="stylesheet" href="/css/sign_in.css">
        <link rel="stylesheet" href="/css/header.css">
    </head>
    <body>
        <header>
            <div class="header-logo">
                <h1>MessageX</h1>
            </div>
           

            <div class="header-link">
                <ul>
                    <li><a href="/signup">Sign up</a></li>
                    <li><a href="">About us</a></li>
                    <li><a href="">Feedback</a></li>
                    
                </ul>
            </div>     
        </header>


        <div class="login-form">
            <h2><i class="fas fa-clipboard-list"  style="font-size:2rem; margin:1rem;"></i>Login</h2>

            <div class="signin_form">
                <form action="/create-session" method="POST">
                    <i class="fas fa-users icon"></i>
                    <input type="text" name="email" placeholder="Email" required><br>
                    <i class="fas fa-key icon"></i>
                    <input type="password" name="password" placeholder="Password" required><br>
                    <input type="submit">
                </form>
            </div>
        </div>

           



            <script src="https://kit.fontawesome.com/be3f777c45.js" crossorigin="anonymous"></script>

    </body>
  </html>
